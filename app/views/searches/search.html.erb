<% if @range == "User" %>
  <h3>Users search for"<%= @word %>"</h3>
  <table class="table table-hover table-inverse">
    <tbody>
      <tr>
        <th>name</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>Books search for "<%= @word %>"</h3>
  <table class="table table-hover table-inverse">
    <tbody>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
